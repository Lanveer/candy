/* pages/Mine/regist/regist.wxss */

.regist {
  display: block;
  border-top: 1px solid #efefef;
  width: 100%;
  height: auto;
  overflow: hidden;
}

.section {
  width: 95%;
  height: 34pt;
  margin: auto;
  border: 1px solid #efefef;
  display: flex;
  flex-direction: row;
  align-items: center;
  vertical-align: middle;
}

.left{
  width: 133rpx;height: 60rpx;
  border-right: 1px solid #c1c1c1;
  color: #333;font-size: 10pt;
  line-height: 60rpx;
  padding-left: 10pt;
}
.pl{
  font-size: 10pt;color: #b4b4b4;
  padding-left: 10pt;
}
input{
  color: #333;
  font-size: 10pt;
  padding-left: 10pt;
}
.section:first-child{
  margin-top: 20pt;
}
.ver-left{
  width: 450rpx;
}
.ver-right{
  padding-left: 10pt;
  color: #333;
  font-size: 10pt;
}

.c-left{
   width: 200rpx;
   border-right: none;
}
radio-group{margin-left: 5pt;}
radio{
  transform: scale(.8);
  color: #333;
   padding-top: 5px;
  padding-bottom: 5px; 
}
checkbox-group{
  margin-left: 5pt;
}
checkbox{
  transform: scale(.8);
  color: #333;
   padding-top: 5px;
  padding-bottom: 5px; 
}

.finish{
  width: 90%;height: 80rpx;
  margin: 10pt auto 0pt;
  background: #ff7c46;
  color: #fff;
  line-height: 80rpx;
  font-size: 12pt;
  border: none;outline: none;
  margin-bottom: 20px;
}

.tip{
   font-size: 9pt;
   color: #999;
  margin-top: 8.5pt;
  margin-left: 10pt;

}
