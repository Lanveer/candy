/* pages/exhibitionPos/exhibitionPos.wxss */

page {
  background: #eaf0f4;
}

.container {
  width: 750rpx;
  height: auto;
  overflow: hidden;
}

.banner {
  width: 100%;
  height: 300rpx;
  position: relative;
}

.banner-image {
  width: 100%;
  height: 100%;
  max-width: 100%;
}

.separatorLine10 {
  width: 750rpxrpx;
  height: 20rpx;
  background: #eaf0f4;
  /*margin-top: 8rpx;*/
}

.infoView {
  width: 750rpx;
  height: 178rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
  padding-top: 20rpx;
  overflow: hidden;
}

.first_info {
  width: 710rpx;
  height: 44rpx;
  display: flex;
  flex-direction: row;
  margin-left: 10pt;
  justify-content: space-between;
}

.contactName {
  font-size: 28rpx;
  color: #333;
}

.floor {
  font-size: 28rpx;
  color: #ff6029;
  margin-right: 10pt;
}

.contactWay {
  font-size: 28rpx;
  color: #333;
}

.second_info {
  width: 710rpx;
  height: 44rpx;
  margin-top: 40rpx;
  display: flex;
  margin-left: 10pt;
  flex-direction: row;
  justify-content: space-between;
}

.third_info {
  width: 750rpx;
  height: 74rpx;
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.tagView {
  width: auto;
  height: 34rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-left: 10pt;
}

.tag {
  height: 34rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  vertical-align: middle;
}

.tagtext {
  font-size: 20rpx;
  color: white;
  margin-right: 5pt;
  width: auto;
  background: #ffcd4d;
  display: block;
  border-radius: 2pt;
  padding: 2pt 3pt 2pt 3pt;
}

.imageView {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10pt;
}

.imageView> image {
  max-width: 100%;
  width: 100%;
  height: 100%;
}

/*add   */

.box {
  width: 100%;
  height: auto;
  overflow: hidden;
  margin: 10pt auto;
  background: #fff;
}

.list-box {
  width: 95%;
  margin: auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  vertical-align: middle;
   /* justify-content: space-between;  */
  flex-wrap: wrap;
}

.box>view {
  font-size: 12pt;
  color: #333;
  text-align: center;
  margin-top: 30rpx;
  margin-bottom: 40rpx;
}

.list {
  width: 222rpx;
  height: 222rpx;
  border: 1rpx solid #b9b9b9;
  margin-bottom: 10pt;
  text-align: center;
  margin-right: 10px;
}
::-webkit-scrollbar{
  display: none;
}
.list>image{
   width: 156rpx;height: 156rpx;
   display: block;
   margin: 10rpx auto 0;
}
.list>text{
  font-size: 10pt;color: #333;
  margin-top: 3pt;
}
