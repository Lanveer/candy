/* pages/Mine/qualifyUpload/qualifyUpload.wxss */
.hr{
  width: 100%;height: 1rpx;
  background: #ddd;
}
.item {
  width: 90%;
  height: auto;
  overflow: hidden;
  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: auto;
  vertical-align: middle;
  align-items: center;
  padding-bottom: 30rpx;
}

.title {
  font-size: 10pt;
  color: #333;
  margin-left: 10rpx;
}

.input{
  width: 95%;
  height: 30pt;
  margin: auto;
  border: 1px solid #eaeaea;
  color: #333;
  font-size: 10pt;
  padding-left: 10rpx;
  border-radius: 5rpx;
}

.pl{
  color: #b4b4b4;
  font-size: 9pt;
}
button {
  width: 300rpx;
  height: 80rpx;
  font-size: 10pt;
  color: #fff;
  margin-top: 50rpx;
  background: #42aaff;
  line-height: 80rpx;
}
.tags{
  width: 80%;
}
checkbox{
  font-size: 9pt;
  color: #333;
  margin-right: 20rpx;
  transform:scale(.8)
}
.checkbox{
  font-size: 9pt;
}
radio{
   transform:scale(.8)
}


.upload {
  width: 80%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  margin: auto;
  vertical-align: middle;
  align-items: center;
}

.upload-box {
  width: 300rpx;
  height: 150rpx;
  border: 1rpx solid #ddd;
  margin-top: 20px;
}
.upload-box>image{
  max-width: 100%;
  width: 100%;
  height: 100%;
}
.btn {
  width: 120rpx;
  height: 60rpx;
  background: #42aaff;
  font-size: 9pt;
  color: #fff;
  display: block;
  text-align: center;
  line-height: 60rpx;
  margin-top: 20rpx;
  border-radius: 5rpx;
  margin-left: 40rpx;
}
.picker{
  margin-left: 16pt;
  color: #333;
  font-size: 10pt;
  display: flex;flex-direction: row;
  align-items: center;
  vertical-align: middle;

}
.hotelName{
  color:#42aaff!important; 
  margin-left: 10px;
}