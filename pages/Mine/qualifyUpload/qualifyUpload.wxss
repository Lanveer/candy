/* pages/Mine/qualifyUpload/qualifyUpload.wxss */

.box {
  border-top: 1px solid #ddd;
}

.item {
  width: 90%;
  height: auto;
  overflow: hidden;
  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: auto;
  vertical-align: middle;
  align-items: center;
  padding-bottom: 30rpx;
}

.input{
  width: 95%;
  height: 30pt;
  margin: auto;
  border: 1px solid #eaeaea;
  color: #333;
  font-size: 10pt;
  padding-left: 10rpx;
  border-radius: 5rpx;
}
.title {
  font-size: 10pt;
  color: #333;
  margin-left: 10pt;
  width: 200rpx;
}

.upload {
  width: 400rpx;
  height: 280rpx;
  display: flex;
  flex-direction: column;
  margin: auto;
  vertical-align: middle;
  align-items: center;
}

.upload-box {
  width: 300rpx;
  height: 150rpx;
  border: 1rpx solid #ddd;
  margin-top: 20px;
}
.upload-box>image{
  max-width: 100%;
  width: 100%;
  height: 100%;
}
.btn {
  display: block;
  width: 120rpx;
  height: 60rpx;
  background: #42aaff;
  font-size: 9pt;
  color: #fff;
  text-align: center;
  line-height: 60rpx;
  margin-top: 20rpx;
  border-radius: 5rpx;
}

button {
  width: 300rpx;
  height: 80rpx;
  font-size: 10pt;
  color: #fff;
  margin-top: 50rpx;
  background: #42aaff;
  line-height: 80rpx;
}
