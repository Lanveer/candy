<!--pages/Mine/regist/regist.wxml-->


<form class='regist' bindsubmit='regist'>
  <view class='section'>
    <view class='left'>+86</view>
    <view class='right'>
      <input type='number' maxlength='11' class='tel' placeholder='请输入您的手机号码' placeholder-class='pl'></input>
    </view>
  </view>


  <view class='section' style='margin-top:10pt;'>
    <view class='left'>密码</view>
    <view class='right'>
      <input type='number' class='tel' placeholder='请输入您的密码' type='password' placeholder-class='pl'></input>
    </view>
  </view>



  <view class='section' style='margin-top:20pt;'>
    <view class='left ver-left'>
      <input type='number' class='ver-code' maxlength='6'></input>
    </view>
    <view class='right ver-right'>
      获取验证码
    </view>
  </view>

  <view class='section' style='margin-top:20pt;'>
    <view class='left c-left'>
      选择身份：
    </view>
    <view class='right'>
      <checkbox-group>
        <checkbox>参展方</checkbox>
        <checkbox>办展方</checkbox>
      </checkbox-group>
    </view>
  </view>

  <view class='' style='margin-top:20pt;'>
    <view class='left c-left'>
      标签：
    </view>
    <view class='right'>
      <checkbox-group>
        <checkbox>红酒</checkbox>
        <checkbox>白酒</checkbox>
        <checkbox>红酒</checkbox>
        <checkbox>白酒</checkbox>
        <checkbox>红酒</checkbox>
        <checkbox>白酒</checkbox>
        <checkbox>红酒</checkbox>
        <checkbox>白酒</checkbox>
      </checkbox-group>
    </view>
  </view>

  <view class='tips'>请参展人员注册完成之后到个人中心丰富您的个人资料，请办展企业完成注册之后到个人中心完成资质审核，可自主完善展纬信息和产品信息</view>
  <button class='finish'>完成注册</button>

</form>